<div class="container-fiuld user">
  <div class="row">
    <div class="col-lg-2 user-nav user-nav-pc d-lg-block d-none">
      <ul>
        <li class=""><%= link_to "アカウント", users_account_index_path %></li>
        <li class="active"><%= link_to "プロフィール", edit_users_profile_path(current_user) %></li>
      </ul>
    </div>
    <div class="col-lg-2 user-nav user-nav-mobile d-lg-none">
      <ul>
        <li class=""><%= link_to "アカウント", users_account_index_path %></li>
        <li class="active"><%= link_to "プロフィール", edit_users_profile_path(current_user) %></li>
      </ul>
    </div>
    <div class="col-lg-10 user-view">
      <div class="user-view-box">
        <div class="update-content">
          <div class="row">
            <h5>プロフィール</h5>
          </div>
        </div>
        <%= form_with model: @user, url: users_profile_path do |f| %>
          <div class="update-content">
            <div class="row">
              <div class="col-md-6 offset-md-3">
                <div class="icon-box">
                  <% if @user.image.attached? %>
                    <%= image_tag @user.image, class: "icon-image host-icon" %>
                  <% else %>
                    <img alt="アイコン画像" class="icon-image host-icon">
                  <% end %>
                </div>
              </div>
            </div>
          </div>
          <div class="update-content">
            <div class="row">
              <%= f.label :avatar, "アイコン画像", class: "col-md-3 required-a" %>
              <%= f.file_field class: "mb-4 col-md-9", placeholder: "アイコン画像をアップロード" %>
            </div>
          </div>
          <div class="update-content">
            <div class="row">
              <%= f.label :username, "名前", class: "col-md-3 required-a" %>
              <%= f.text_field :username, class: "mb-4 col-md-9", placeholder: "名前を入力" %>
            </div>
          </div>
          <div class="update-content">
            <div class="row">
              <%= f.label :profile, "自己紹介", class: "col-md-3 required-a" %>
              <%= f.text_area :profile, class: "form-control mb-4 col-md-9", placeholder: "自己紹介を入力" %>
            </div>
          </div>
          <div class="update-content">
            <div class="row">
              <%= f.submit "更新", class:"col-md-2 btn btn-primary mx-3" %>
            </div>
          </div>
        <% end %>       
      </div>
    </div>
  </div>
</div>